<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Loader Button -->
    <RelativeLayout
        android:id="@+id/loader_button"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/loader_outer_circle"
        android:clipChildren="false"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Inner Circle -->
        <View
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:background="@drawable/loader_inner_circle" />

        <!-- Gradient Circle with Blur Effect -->
        <ImageView
            android:id="@+id/gradientCircle"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:translationZ="-1dp"
            android:alpha="0.8"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/gradient_blur_circle" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
