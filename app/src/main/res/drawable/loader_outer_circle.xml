<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#282828" />
            <stroke
                android:width="4dp"
                android:color="#282828" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                android:left="25dp"
                android:top="25dp"
                android:right="25dp"
                android:bottom="25dp" />
            <solid android:color="#212121" />
            <stroke
                android:width="2dp"
                android:color="#292929" />
            <corners android:radius="80dp" />
        </shape>
    </item>
</layer-list>
